FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY frontend/package*.json ./frontend/

# Install dependencies
RUN npm install
RUN cd frontend && npm install

# Copy source code
COPY . .

# Build the application
RUN cd frontend && npm run build

# Expose port
EXPOSE 3000

# Start the application
CMD ["cd", "frontend", "&&", "npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "3000"]
